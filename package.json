{
  "name": "TindArt",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon -e js,mustache ./bin/www",
    "test": "nyc mocha",
    "coverage": "codecov",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "build-ts": "tsc",
    "watch-ts": "tsc -w"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "spec": "./test/**/*.spec.ts"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": true,
    "instrument": true,
    "exclude-after-remap": false,
    "all": true,
    "cache": false,
    "skip-full": false,
    "functions": 50,
    "statements": 50,
    "lines": 50,
    "check-coverage": true
  },
  "dependencies": {
    "@google-cloud/storage": "^4.1.2",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.1",
    "@types/chai-http": "^4.2.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.1",
    "@types/express-flash": "0.0.1",
    "@types/express-session": "^1.15.15",
    "@types/mongodb": "^3.3.3",
    "@types/morgan": "^1.7.37",
    "@types/multer": "^1.3.10",
    "@types/mustache-express": "^1.2.1",
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "chai-http": "^4.3.0",
    "cookie-parser": "^1.4.4",
    "debug": "^2.6.9",
    "express": "^4.16.4",
    "express-flash": "0.0.2",
    "express-session": "^1.17.0",
    "http-errors": "~1.6.3",
    "mongodb": "^3.3.2",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "multer-google-storage": "^1.3.0",
    "mustache-express": "^1.3.0",
    "nodemon": "^1.19.4",
    "path": "^0.12.7",
    "ts-mockito": "^2.5.0",
    "validator.ts": "^0.2.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.5",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "codecov": "^3.6.1",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.6.4"
  }
}

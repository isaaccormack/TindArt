<div class="overall-header"> 
    <div class="header-left">  
        <a href="/">
            <img src="../assets/icons8-fire-80.png" />
            <p class="title">TindArt</h1>
        </a> 
    </div>
    <div class="header-spacer">
    </div>
    <div class="header-search">
    <form class="search">
        <input  id="searchbar" type="text" placeholder="Search for another user" name="search" />
        <button type="submit" onclick="search_user(event)"><img src="../assets/icons8-search-96.png" alt="Search" /></button>
        </form>
    </div>
    {{#username}} {{! If authenticated, these options will be visible }}
    <div class="header-right">
        <a href="/user/{{username}}"><img src="../assets/icons8-user-80-big.png" /></a> {{! This will be changed to include the profile picture if they have one }}
        <a href="/"><img src="../assets/icons8-heart-80.png" /></a> {{! Likes page will be created }}
        <a href="/api/logout"><img src="../assets/icons8-lock-512.png" /></a> {{! This will be an icon in the future }}
    </div>
    {{/username}}
</div>

<script type="text/javascript">
function search_user(e) {
    e.preventDefault();
    window.location.pathname = '/user/'+document.getElementById('searchbar').value;
    return false;
}
</script>
<div class="overall-header">
    <div class="header-left">
        <a href="/">
            <img src="../assets/icons8-fire-80.png" />
            <p class="title">TindArt</h1>
        </a>
    </div>
    <div class="header-spacer">
    </div>
    <div class="header-search">
        <form class="search">
            <input id="searchbar" type="text" placeholder="Search users" name="search" />
            <button type="submit" onclick="search_user(event)"><img src="../assets/icons8-search-96.png"
                    alt="Search" /></button>
        </form>

extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Upload
        - if (messages.error)
          .message.error
          for error in messages.error  
            p #{error}
        - if (messages.result)
          .message.result
          for result in messages.result  
            p #{result}

        // upload forms
        h3 Avatar Upload
        form(method='POST', action='/api/upload' enctype="multipart/form-data")
          div.form-group
            label(for='name') File:
            input#name.form-control(type='file', accept="image/*" name='avatar')
            input(type='submit', value='Upload avatar')
        br
        h3 Gallery Upload
        form(method='POST', action='/api/upload' enctype="multipart/form-data")
          div.form-group
            label(for='name') File:
            input#name.form-control(type='file', accept="image/*" name='gallery' multiple)
            input(type='submit', value='Upload to gallery')
        
        
        a(href="/") Go home?